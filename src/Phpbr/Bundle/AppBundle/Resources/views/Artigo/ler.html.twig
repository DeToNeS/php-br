{% extends "::layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="large-12 columns">
            <h2>{{ artigo.titulo }}</h2>
            <p class="subheader">{{ artigo.score }} pontos / Publicado por: {{ artigo.user.name|raw }} / Data: {{ artigo.dataPublicado|date('d/m/Y') }}</p>

            {% if artigo.tags|length %}
                <p class="subheader">Tags: {{ artigo.tags|raw }}</p>
            {% endif %}

            <hr/>

            <div class="large-9 medium-9 columns">
                <article id="{{ artigo.slug }}">
                    {{ artigo.texto|raw|nl2br }}
                </article>
            </div>

            <div class="large-3 medium-3 columns">
                <p class="text-center"><img src="{{ gravatar }}" alt="{{ artigo.user.name|raw }}" class="th" /></p>
                <p>{{ facebookButton() }}</p>
                <p>{{ twitterButton() }}</p>
                <p>{{ linkedinButton() }}</p>
            </div>

        </div>
    </div>
{% endblock %}