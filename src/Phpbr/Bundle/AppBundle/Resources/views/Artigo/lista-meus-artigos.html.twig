{% extends "::layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="large-12 columns">
            <h3><a href="/meus-artigos">Meus Artigos</a> :: Lista de Artigos</h3> 
            <p>
                <a href="{{ path('novo_artigo') }}" class="button success">Criar Artigo</a>
            </p>
            <hr />

            {% if artigos|length %}
            {% for artigo in artigos %}
            <div class="row">
                <div class="large-3 columns text-right">
                    <a data-confirm='{
                        "title":"Tem certeza que deseja excluir este item?",
                        "body":"{{ artigo.titulo|e }}",
                        "ok":"SIM",
                        "cancel":"NÃO"}' 
                    href="/meus-artigos/{{ artigo.id }}/deletar"
                    class="button tiny alert">Deletar</a>

                    <a href="/meus-artigos/{{ artigo.id }}/editar" 
                        class="button tiny">Editar</a>
                </div>

                <div class="large-6 columns">

                    <a href="{{ path('ler_artigo', { slug: artigo.slug }) }}">
                        {{ artigo.titulo|e }}
                    </a> <br />
                    <small>Autor: {{ artigo.user.username|raw }}</small>
                    <br />
                    {% if (artigo.publicado == 1) %}
                        <span data-tooltip class="label [radius] success" title="Tooltip">Publicado</span>
                    {% else %}
                        <span data-tooltip class="label [radius] alert" title="Tooltip">Não Publicado</span>
                    {% endif %}
                </div>

                <div class="large-3 columns">
                    <h5>
                        <small>
                            {{ artigo.dataPublicado|date('d/m/Y') }}, 
                            {{ artigo.dataPublicado|date('U')|tempo_passado }} atrás
                        </small>
                    </h5>
                </div>
            </div>
            <hr />
                    {% endfor %}
            {% endif %}

        </div>
    </div>
{% endblock %}
