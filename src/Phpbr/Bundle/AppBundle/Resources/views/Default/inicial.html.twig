{% extends "::layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="medium-8 large-8 columns">
            {% for artigo in artigos|slice(0, 6) %}
            <div>
                <h4>
                    <a href="{{ path('ler_artigo', { slug: artigo.slug }) }}">
                        {{ artigo.titulo|e }}
                    </a>
                </h4>
                <div style="width:80px; float:left;">
                    <img src="{{ artigo.user.email|email2gravatar('60') }}" alt="{{ artigo.user.name|raw }}" class="th img-gravatar-inicial" />
                </div>
                <div>
                    <p class="text-justify">
                        {{ artigo.resumo|e }}
                    </p>
                    <h5>
                        <small>
                        Autor: <a href="/autor/{{ artigo.user.username|raw }}">{{ artigo.user.username|raw }}</a>
                        , {{ artigo.dataPublicado|date('U')|tempo_passado }} atrás
                        </small>
                    </h5>
                </div>
                <hr />
            </div>
            {% endfor %}
        </div>

        <div class="medium-4 large-4 columns text-center">
            {% for artigo in artigos|slice(6, 6) %}
                <p class="text-left">
                    <h5>
                    <img src="{{ artigo.user.email|email2gravatar('40') }}" alt="{{ artigo.user.name|raw }}" class="th img-gravatar-inicial" />
                <p class="text-left">
                        <a href="{{ path('ler_artigo', { slug: artigo.slug }) }}">
                            {{ artigo.titulo|e }}
                        </a>
                        <br />
                        <small>
                        Autor: <a href="/autor/{{ artigo.user.username|raw }}">{{ artigo.user.username|raw }}</a>
                        , {{ artigo.dataPublicado|date('U')|tempo_passado }} atrás
                        </small>
                        </p>
                    </h5>
                </p>
                <hr />
            {% endfor %}
        </div>
    </div>

    <div class="row">
        <div class="large-12 columns">
                {% block fos_user_content %}{% endblock %}
        </div>
    </div>

    <div class="row">
        <div class="large-12 columns">
            <hr />
            <h3>Notícias do mundo PHP</h3>
                <div class="medium-8 large-8 columns">
                    <h4></h4>
                </div>
                <div class="medium-3 large-3 columns">
                    <h4>Vagas de Emprego</h4>
