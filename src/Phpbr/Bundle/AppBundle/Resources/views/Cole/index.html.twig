{% extends '::layout.html.twig' %}


{% block title %}
    http://cole.php-br.org
{% endblock %}

{% block content %}
    <div class="row">
        <div class="large-9 columns">
            <h3>http://cole.php-br.org</h3>
        </div>
            <div class="large-3 columns">
                <a href="{{ path('cole_novo') }}" class="button success right">
                    Novo Código
                </a>
            </div>
            <hr />
        {% for entity in entities %}
            <div class="row">
                <div class="large-3 columns">
                    <h5 class="right">
                    <span class="label">
                        {% if entity.dataCriacao %}{{ entity.dataCriacao|date('U')|tempo_passado }} atrás{% endif %}
                    </span>
                        <small>{% if entity.dataCriacao %}{{ entity.dataCriacao|date('d/m/y H:i') }}{% endif %}</small>
                    </h5>
                </div>
                <div class="large-9 columns">
                    <h5>
                        <a href="{{ path('cole_ver', { 'id': entity.id }) }}">{{ entity.titulo }}</a>
                    </h5>
                </div>
            </div>
        {% endfor %}
        </div>

    </div>
</div>
{% endblock %}

