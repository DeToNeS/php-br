<header>
    <div class="contain-to-grid">
        <nav class="top-bar" data-topbar>
            <ul class="title-area">
                <li class="name">
                    <h1><a href="/">##php-br @ irc.freenode.net</a></h1>
                </li>
            </ul>

            <section class="top-bar-section">
                <ul class="right">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li class="has-dropdown">
                            <a href="{{ path('fos_user_profile_show') }}">
                                {{ app.user.username }}
                            </a>
                            <ul class="dropdown">
                                <li>
                                    <a href="{{ path('fos_user_profile_edit') }}">Editar Perfil</a>
                                </li>
                                <li>
                                    <a href="/artigos">Artigos</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('fos_user_security_login') }}">Entrar</a>
                        </li>
                        <li>
                            <a href="{{ path('fos_user_registration_register') }}">Novo Perfil</a>
                        </li>
                    {% endif %}
                </ul>
            </section>
        </nav>
    </div>
</header>
