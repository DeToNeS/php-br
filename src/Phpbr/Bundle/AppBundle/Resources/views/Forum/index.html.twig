{% extends "::layout.html.twig" %}

{% block title %}Forum{% endblock %}

{% block content %}
    <div class="row">
        <div class="large-12 columns">
            <h3><a href="{{ path('forum_index') }}">Forum</a> | {{ 'phpbr.forum.topics'|trans({}, 'messages') }}</h3>
            <hr />

            <div class="row">
                <div class="large-6 columns" style="vertical-align: middle;">
                    <strong>{{ 'phpbr.forum.subjects'|trans({}, 'messages')|upper }}</strong>
                </div>
                <div class="large-2 columns text-center" style="vertical-align: middle;">
                    <strong>{{ 'phpbr.forum.topics'|trans({}, 'messages')|upper }}</strong>
                </div>
                <div class="large-2 columns text-center" style="vertical-align: middle;">
                    <strong>{{ 'phpbr.forum.messages'|trans({}, 'messages')|upper }}</strong>
                </div>
                <div class="large-2 columns text-center" style="vertical-align: middle;">
                    <strong>{{ 'phpbr.forum.lasts'|trans({}, 'messages')|upper }}</strong>
                </div>
            </div>
            <hr />
            {% for categoria in categorias %}
            <div class="row">
                <div class="large-6 columns">
                    <strong>
                        <a href="ver-topico/{{ categoria.id }}">{{ categoria.nome|upper }}</a>
                    </strong>
                    <br />
                    {{ categoria.descricao }}
                </div>
                <div class="large-2 columns text-center">
                    {{ categoria.id|quantidade_topicos }}
                </div>
                <div class="large-2 columns text-center">
                    {{ categoria.id|quantidade_mensagens }}
                </div>
                <div class="large-2 columns">
                    18 minutos atr√°s
                </div>
            </div>
            <hr />
            {% endfor %}
        </div>
    </div>
{% endblock %}

