{% extends "::layout.html.twig" %}

{% block title %}Forum{% endblock %}

{% block content %}
    <div class="row">
        <div class="large-9 columns">
            <h3><a href="{{ url('forum_index') }}">Forum</a> | {{ categoria.nome }} </h3>
        </div>

        <div class="large-3 columns">
            <a href="{{ url('forum_novo_topico') }}" class="button success right">
                {{ 'phpbr.forum.new_topic'|trans({}, 'messages') }}
            </a>
        </div>
        <hr />
    </div>


    <div class="row">
        <div class="large-9 columns" style="vertical-align: middle;">
            <strong>{{ 'phpbr.forum.subject'|trans({}, 'messages')|upper }}</strong>
        </div>
        <div class="large-1 columns text-center" style="vertical-align: middle;">
            <strong>{{ 'phpbr.forum.messages'|trans({}, 'messages')|upper }}</strong>
        </div>
        <div class="large-2 columns text-center" style="vertical-align: middle;">
            <strong>{{ 'phpbr.forum.author'|trans({}, 'messages')|upper }}</strong>
        </div>
        <br />
        <hr />
    </div>


    {% for topico in topicos %}
        <div class="row">
            <div class="large-9 columns">
                {{ topico.dataCriacao|date('d/m/Y H:i') }},
                <small>
                    {{ topico.dataCriacao|date('U')|tempo_passado }} {{ 'phpbr.forum.ago'|trans({}, 'messages') }}
                </small>
                <p>
                    <a href="{{ url('ver_mensagem', {'slug': topico.slug}) }}">
                       <strong>#{{ topico.id }}</strong>
                    </a>
                    <a href="{{ url('ver_mensagem', {'slug': topico.slug}) }}">
                        {{ topico.assunto }}
                    </a>
                </p>
            </div>
            <div class="large-1 columns text-center">
                <strong>5</strong>
            </div>
            <div class="large-2 columns text-center">
                <small>
                    <a href="{{ url('phpbr_app_verusuario', {'usuario': topico.user.username} ) }}">
                        <img src="{{ topico.user.email|email2gravatar('40') }}" alt="{{ topico.user.name|raw }}" class="th" />
                    </a>
                    <br />
                    <a href="{{ url('phpbr_app_verusuario', {'usuario': topico.user.username}) }}">
                        {{ topico.user.name }}
                    </a>
                </small>
            </div>
            <hr />
        </div>
    {% endfor %}
{% endblock %}

